<!DOCTYPE html>
<html>
<head>
    <title>Edit Metric</title>
    <link rel="stylesheet" href="/css/403projectStyle.css">
</head>
<body>
    <header>
        <h1>Edit Metric</h1>
    </header>
    <nav>
        <a href="/"><button class="link">Home</button></a>
    </nav>
    <main>
        <section>
            <form action="/editMetric/<%= metric.metricid %>" method="POST">
                <table>
                    <tr>
                        <td><label for="custweight">Weight</label></td>
                        <td><input type="number" id="custweight" name="custweight" value="<%= metric.custweight %>"></td>
                    </tr>
                    <tr>
                        <td><label for="custheightin">Height</label></td>
                        <td><input type="text" id="custheightin" name="custheightin" value="<%= metric.custheightin %>"></td>
                    </tr>
                    <tr>
                        <td><label for="custbmi">BMI</label></td>
                        <td><input type="number" id="custbmi" name="custbmi" value="<%= metric.custbmi %>" step=".01"></td>
                    </tr>
                    <tr>
                        <td><label for="caloriesconsumed">Calories Consumed</label></td>
                        <td><input type="number" id="caloriesconsumed" name="caloriesconsumed" value="<%= metric.caloriesconsumed %>"></td>
                    </tr>
                    <tr>
                        <td><label for="caloriesburned">Calories Burned</label></td>
                        <td><input type="number" id="caloriesburned" name="caloriesburned" value="<%= metric.caloriesburned %>"></td>
                    </tr>
                    <tr>
                        <td><label for="recorddate">Record Date</label></td>
                        <td><input type="date" id="recorddate" name="recorddate" value="<%= metric.recorddate.toISOString().split('T')[0] %>"></td>
                    </tr>
                </table>
                <button type="submit">Save Changes</button>
            </form>
        </section>
    </main>
    <footer>
        <p>Created by Madison Hein, Josh Locke, Harmony Tayler, and Anna Young</p>
    </footer>
</body>
</html>